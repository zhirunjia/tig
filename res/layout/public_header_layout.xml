<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/common_header_style" >
	<TextView
	    android:id="@+id/common_header_title_left_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    style="@style/common_header_button_style"
	    android:background="@drawable/nav_arrow"
	    android:layout_gravity="left|center_vertical"
	    android:onClick="commonBackButtonOnClick"/>

	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    style="@style/common_header_text_style"
	    android:id="@+id/common_header_title"/>
	<Button
	    android:id="@+id/common_header_title_right_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    style="@style/common_header_button_style"/>
</LinearLayout>
